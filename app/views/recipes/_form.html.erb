<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |addr| %>
    <%= addr.label :ingredient_1 %>
    <%= addr.text_field :ingredient_1 %><br>

    <%= addr.label :ingredient_2 %>
    <%= addr.text_field :ingredient_2 %><br>
    <% end %>

  <%= f.submit %>
<% end %>
